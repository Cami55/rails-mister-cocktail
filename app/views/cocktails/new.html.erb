<div class="text-center">
  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://bjournal.co/wp-content/uploads/2017/06/cocktails-at-joes-at-east.jpg);">
    <div class="container">
     <h1>Cocktails</h1>
      <p>Create a Cocktail!</p>
    </div>
  </div>
</div>


  <div class="row justify-content-center mt-5 mb-5">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <div class="card-text">
            <h1>Create a Cocktail</h1>
            <%= simple_form_for(@cocktail) do |f| %>
              <%= f.input :name %>
              <%= f.input :photo, as: :file %>
              <%= f.submit "Create Cocktail", class: "btn btn-primary mt-2" %>
            <% end %>
            <%= link_to "Back to List", cocktails_path, class: "btn btn-primary mt-2" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

