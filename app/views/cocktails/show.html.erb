<%= render 'banner' %>
<p id="notice"><%= notice %></p>

<% if @cocktail.photo.attached? %>
<%= cl_image_tag @cocktail.photo.key, alt: "alttext", width: 300, height: 300, crop: :fill %>
<% end %>


 <div class="row justify-content-center mt-4 mb-3">
    <div class="col-md-8">
      <div class="card">
        <div class="card-body">
          <div class="card-text text-center">
            <h1><%= @cocktail.name %></h1>
            <ul>
              <% @cocktail.doses.each do |dose| %>
              <li>
                <%= dose.ingredient.name %>
                <small>
                  <%= link_to '<i class="fas fa-trash-alt"></i>'.html_safe, dose_path(dose), method: :delete, data: { confirm: 'Are you sure?' } %>
                  </small>
                  </li>
                  <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>

 <div class="row justify-content-center mt-3">
  <div class="col-ml-8">
<%= link_to 'Add Ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary mt-3" %>
<%= link_to 'Edit', edit_cocktail_path(@cocktail), class: "btn btn-primary mt-3" %>
<%= link_to 'Delete', @cocktail, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary mt-3" %>
<%= link_to 'Back', cocktails_path, class: "btn btn-primary mt-3" %>
</div>
</div>

<div class="row justify-content-center">
<div class="footer">
  <div class="footer-links">
    <a href="#"><i class="fab fa-github"></i></a>
    <a href="#"><i class="fab fa-instagram"></i></a>
    <a href="#"><i class="fab fa-facebook"></i></a>
    <a href="#"><i class="fab fa-twitter"></i></a>
    <a href="#"><i class="fab fa-linkedin"></i></a>
  </div>
  <div class="footer-copyright ">
  </div>
</div>
</div>

