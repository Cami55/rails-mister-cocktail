
<h1><%= @cocktail.name %></h1>
<hr>

<div class="row">
  <div class="col-sm-6">
  </div>
  <div class="col-sm-6">
    <h3>Ingredients:</h3>
    <ul>
      <% @cocktail.doses.each do |d| %>
        <li>
          <%= d.ingredient.name %> - <%= d.description %> - <%= link_to "Delete", cocktail_dose_path(@cocktail, d), method: :delete, data: { confirm: 'Delete this ingredient?' } %>
        </li>
      <% end %>

      <%= simple_form_for [@cocktail, @dose] do |i| %>
        <%= i.association :ingredient, collection: @ingredients.order('name ASC') %>
        <%= i.input :description, placeholder: "How much?" %>
        <%= i.submit "Add" %>
      <% end %>

    </ul>
  </div>
</div>

<hr>

<div class="row">
  <%= simple_form_for @cocktail do |c| %>
    <%= c.input :name, placeholder: "cocktail name..." %>
    <%= c.input :photo %>
    <%= c.input :photo_cache, as: :hidden %>
    <%= c.button :submit, class: "btn btn-success" %>
    <%= link_to "Delete this cocktail", cocktail_path(@cocktail), method: :delete, data: { confirm: 'Are you sure you want to delete this cocktail?' }, class: "btn btn-danger" %>
    <%= link_to "Back to all cocktails", cocktails_path, class: "btn btn-primary" %>
    <%= link_to "Cancel", cocktail_path(@cocktail) %>
  <% end %>
  <hr>
</div>
